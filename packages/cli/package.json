{
    "name": "@e-rechnung/cli",
    "version": "0.1.0",
    "description": "Command-line interface for E-Rechnung Tool",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "einvoice": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@e-rechnung/core": "workspace:*",
        "@e-rechnung/validator": "workspace:*",
        "@e-rechnung/parse-xml": "workspace:*",
        "commander": "^11.1.0",
        "chalk": "^5.3.0",
        "ora": "^7.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.3",
        "vitest": "^1.0.4",
        "tsx": "^4.6.2"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ]
}